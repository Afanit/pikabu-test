<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:elevation="@dimen/elevation_medium">

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/story_margin_horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="@dimen/story_margin_horizontal"
        android:background="@drawable/ripple_rectangle"
        android:includeFontPadding="false"
        android:textColor="@color/colorDark"
        android:textSize="@dimen/tex_size_big"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/body"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Проблемы рыбы-меч" />

    <TextView
        android:id="@+id/body"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/story_margin_horizontal"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="@dimen/story_margin_horizontal"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/tex_size_medium"
        app:layout_constraintBottom_toTopOf="@id/images"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        tools:text="Это было давно и неправда. Но я могу поделиться чем-нибудь интересным с вами"
        tools:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/images"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toTopOf="@id/favoriteButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/body"
        app:layout_goneMarginTop="4dp"
        tools:itemCount="1"
        tools:listitem="@layout/story_image" />

    <View
        android:id="@+id/bottom"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/bottom_height"
        android:layout_marginTop="@dimen/bottom_height"
        android:background="@color/colorGray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/favoriteButton"
        style="@style/RobotoImageButtonStyle"
        android:layout_width="@dimen/button_size"
        android:layout_height="@dimen/button_size"
        android:background="@drawable/ripple_circle"
        android:src="@drawable/ic_favorite"
        app:layout_constraintBottom_toTopOf="@id/bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/bottom" />

    <ImageView
        android:id="@+id/mark"
        android:layout_width="@dimen/mark_width"
        android:layout_height="0dp"
        android:src="@drawable/mark"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>